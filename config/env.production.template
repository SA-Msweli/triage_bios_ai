# Production Environment Configuration Template
# Copy this file to .env.production and update the values
# IMPORTANT: Keep this file secure and never commit actual production values

# ================================
# Firebase Configuration
# ================================
FIREBASE_PROJECT_ID=triage-bios-prod
FIREBASE_API_KEY=your_production_api_key_here
FIREBASE_AUTH_DOMAIN=triagebiosa.com
FIREBASE_DATABASE_URL=https://triage-bios-prod-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=triage-bios-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID=987654321098
FIREBASE_APP_ID=1:987654321098:web:prod123456789012345678
FIREBASE_MEASUREMENT_ID=G-PROD123456

# ================================
# Application Configuration
# ================================
APP_NAME=Triage-BIOS.ai
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
DEBUG_MODE=false
LOG_LEVEL=warn

# ================================
# Hospital Integration
# ================================
HOSPITAL_INTEGRATION_ENABLED=true
USE_MOCK_DATA=false
MOCK_DATA_SEED_ON_START=false

# Hospital API Configuration
HOSPITAL_API_TIMEOUT=30000
HOSPITAL_RETRY_ATTEMPTS=3
HOSPITAL_FALLBACK_ENABLED=true

# ================================
# Firestore Configuration
# ================================
ENABLE_FIRESTORE_EMULATOR=false
FIRESTORE_OFFLINE_PERSISTENCE=true
FIRESTORE_CACHE_SIZE_MB=100

# ================================
# Authentication Configuration
# ================================
AUTH_EMULATOR_ENABLED=false
ENABLE_ANONYMOUS_AUTH=false
REQUIRE_EMAIL_VERIFICATION=true

# ================================
# Real-time Features
# ================================
ENABLE_REAL_TIME_UPDATES=true
WEBSOCKET_RECONNECT_ATTEMPTS=10
WEBSOCKET_RECONNECT_DELAY=5000
MAX_CONCURRENT_LISTENERS=100

# ================================
# AI/ML Configuration
# ================================
GEMINI_API_KEY=your_production_gemini_api_key_here
GEMINI_MODEL_VERSION=gemini-pro
AI_CONFIDENCE_THRESHOLD=0.8
ENABLE_AI_DEBUGGING=false

# ================================
# Device Integration
# ================================
ENABLE_APPLE_HEALTH=true
ENABLE_GOOGLE_FIT=true
ENABLE_MANUAL_VITALS=true
VITALS_VALIDATION_STRICT=true

# ================================
# Security Configuration
# ================================
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=https://triagebiosa.com,https://www.triagebiosa.com
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=200

# Rate limiting per user
MAX_REQUESTS_PER_USER_PER_MINUTE=50
MAX_REQUESTS_PER_IP_PER_MINUTE=100

# ================================
# Monitoring and Analytics
# ================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CRASH_REPORTING=true
ENABLE_ANALYTICS=true
ANALYTICS_DEBUG_MODE=false

# Error Reporting
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# ================================
# Development Tools (Disabled in Production)
# ================================
ENABLE_REDUX_DEVTOOLS=false
ENABLE_FLUTTER_INSPECTOR=false
HOT_RELOAD_ENABLED=false
SHOW_DEBUG_BANNER=false

# ================================
# Testing Configuration (Disabled in Production)
# ================================
ENABLE_TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# ================================
# Logging Configuration
# ================================
LOG_TO_CONSOLE=false
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/triage-bios/app.log
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_FILES=30

# Structured logging
ENABLE_STRUCTURED_LOGGING=true
LOG_FORMAT=json

# ================================
# Cache Configuration
# ================================
ENABLE_HTTP_CACHE=true
HTTP_CACHE_MAX_AGE=3600
ENABLE_IMAGE_CACHE=true
IMAGE_CACHE_MAX_SIZE=500MB

# CDN Configuration
CDN_BASE_URL=https://cdn.triagebiosa.com
ENABLE_CDN=true

# ================================
# Offline Support
# ================================
ENABLE_OFFLINE_MODE=true
OFFLINE_CACHE_STRATEGY=network_first
SYNC_ON_RECONNECT=true
OFFLINE_QUEUE_MAX_SIZE=5000

# ================================
# Notification Configuration
# ================================
ENABLE_PUSH_NOTIFICATIONS=true
FCM_VAPID_KEY=your_production_vapid_key_here
NOTIFICATION_SOUND_ENABLED=true

# ================================
# Geolocation Configuration
# ================================
ENABLE_GEOLOCATION=true
GEOLOCATION_ACCURACY=high
GEOLOCATION_TIMEOUT=20000
DEFAULT_SEARCH_RADIUS_KM=200

# ================================
# Data Validation
# ================================
ENABLE_STRICT_VALIDATION=true
VALIDATE_VITALS_RANGES=true
REQUIRE_CONSENT_FOR_DATA_SHARING=true

# ================================
# Feature Flags
# ================================
FEATURE_HOSPITAL_ROUTING=true
FEATURE_WEARABLE_INTEGRATION=true
FEATURE_BLOCKCHAIN_CONSENT=true
FEATURE_MULTI_LANGUAGE=true
FEATURE_DARK_MODE=true

# ================================
# Hospital Integration (Production Examples)
# ================================
# Metro General Hospital
METRO_GENERAL_API_URL=https://api.metrogeneral.com/v1
METRO_GENERAL_CLIENT_ID=prod_metro_client_id_here
METRO_GENERAL_CLIENT_SECRET=prod_metro_client_secret_here
METRO_GENERAL_SYNC_INTERVAL=2

# City Medical Center
CITY_MEDICAL_API_URL=https://api.citymedical.org/v2
CITY_MEDICAL_API_KEY=prod_city_medical_api_key_here
CITY_MEDICAL_SYNC_INTERVAL=3

# Regional Health Network
REGIONAL_HEALTH_API_URL=https://api.regionalhealth.net/v1
REGIONAL_HEALTH_CLIENT_ID=prod_regional_client_id_here
REGIONAL_HEALTH_CLIENT_SECRET=prod_regional_client_secret_here
REGIONAL_HEALTH_SYNC_INTERVAL=5

# ================================
# Performance Monitoring
# ================================
PERFORMANCE_SAMPLE_RATE=0.01
ERROR_SAMPLE_RATE=1.0
ENABLE_CUSTOM_METRICS=true

# Performance thresholds
MAX_RESPONSE_TIME_MS=2000
MAX_QUERY_TIME_MS=1000
MAX_MEMORY_USAGE_MB=512

# ================================
# Backup and Recovery
# ================================
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=1
BACKUP_RETENTION_DAYS=90
BACKUP_STORAGE_BUCKET=triage-bios-prod-backups

# Cross-region backup
ENABLE_CROSS_REGION_BACKUP=true
BACKUP_REGIONS=us-central1,us-east1,europe-west1

# ================================
# Compliance and Audit
# ================================
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for HIPAA compliance
ENABLE_DATA_ENCRYPTION=true
ENCRYPTION_KEY_ROTATION_DAYS=90

# HIPAA Compliance
HIPAA_COMPLIANCE_MODE=true
ENABLE_BAA_TRACKING=true
PATIENT_DATA_RETENTION_DAYS=2555

# ================================
# Scalability Configuration
# ================================
MAX_CONCURRENT_CONNECTIONS=10000
CONNECTION_POOL_SIZE=100
ENABLE_AUTO_SCALING=true
MIN_INSTANCES=3
MAX_INSTANCES=50

# ================================
# Content Delivery
# ================================
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_MINIFICATION=true
ENABLE_TREE_SHAKING=true

# ================================
# Database Configuration
# ================================
FIRESTORE_MAX_CONNECTIONS=100
FIRESTORE_CONNECTION_TIMEOUT=30000
FIRESTORE_IDLE_TIMEOUT=300000

# ================================
# API Gateway Configuration
# ================================
API_GATEWAY_URL=https://api.triagebiosa.com
API_VERSION=v1
ENABLE_API_VERSIONING=true

# ================================
# Load Balancing
# ================================
ENABLE_LOAD_BALANCING=true
LOAD_BALANCER_ALGORITHM=round_robin
HEALTH_CHECK_INTERVAL=30

# ================================
# Disaster Recovery
# ================================
ENABLE_DISASTER_RECOVERY=true
RECOVERY_TIME_OBJECTIVE_HOURS=4
RECOVERY_POINT_OBJECTIVE_HOURS=1
FAILOVER_REGION=us-east1

# ================================
# Maintenance Windows
# ================================
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=04:00
MAINTENANCE_WINDOW_TIMEZONE=UTC
ENABLE_MAINTENANCE_MODE=false