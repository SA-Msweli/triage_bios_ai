# Development Environment Configuration Template
# Copy this file to .env.development and update the values

# ================================
# Firebase Configuration
# ================================
FIREBASE_PROJECT_ID=triage-bios-dev
FIREBASE_API_KEY=your_development_api_key_here
FIREBASE_AUTH_DOMAIN=triage-bios-dev.firebaseapp.com
FIREBASE_DATABASE_URL=https://triage-bios-dev-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=triage-bios-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012345678
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ================================
# Application Configuration
# ================================
APP_NAME=Triage-BIOS.ai Development
APP_VERSION=1.0.0-dev
APP_ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=debug

# ================================
# Hospital Integration
# ================================
HOSPITAL_INTEGRATION_ENABLED=false
USE_MOCK_DATA=true
MOCK_DATA_SEED_ON_START=true

# Hospital API Configuration (disabled in development)
HOSPITAL_API_TIMEOUT=15000
HOSPITAL_RETRY_ATTEMPTS=2
HOSPITAL_FALLBACK_ENABLED=true

# ================================
# Firestore Configuration
# ================================
ENABLE_FIRESTORE_EMULATOR=true
FIRESTORE_EMULATOR_HOST=localhost
FIRESTORE_EMULATOR_PORT=8080
FIRESTORE_OFFLINE_PERSISTENCE=true
FIRESTORE_CACHE_SIZE_MB=40

# ================================
# Authentication Configuration
# ================================
AUTH_EMULATOR_ENABLED=true
AUTH_EMULATOR_HOST=localhost
AUTH_EMULATOR_PORT=9099
ENABLE_ANONYMOUS_AUTH=true
REQUIRE_EMAIL_VERIFICATION=false

# ================================
# Real-time Features
# ================================
ENABLE_REAL_TIME_UPDATES=true
WEBSOCKET_RECONNECT_ATTEMPTS=5
WEBSOCKET_RECONNECT_DELAY=1000
MAX_CONCURRENT_LISTENERS=10

# ================================
# AI/ML Configuration
# ================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_VERSION=gemini-pro
AI_CONFIDENCE_THRESHOLD=0.7
ENABLE_AI_DEBUGGING=true

# ================================
# Device Integration
# ================================
ENABLE_APPLE_HEALTH=false
ENABLE_GOOGLE_FIT=false
ENABLE_MANUAL_VITALS=true
VITALS_VALIDATION_STRICT=false

# ================================
# Security Configuration
# ================================
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ENABLE_RATE_LIMITING=false
MAX_REQUESTS_PER_MINUTE=1000

# ================================
# Monitoring and Analytics
# ================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CRASH_REPORTING=true
ENABLE_ANALYTICS=false
ANALYTICS_DEBUG_MODE=true

# ================================
# Development Tools
# ================================
ENABLE_REDUX_DEVTOOLS=true
ENABLE_FLUTTER_INSPECTOR=true
HOT_RELOAD_ENABLED=true
SHOW_DEBUG_BANNER=true

# ================================
# Testing Configuration
# ================================
ENABLE_TEST_MODE=false
TEST_USER_EMAIL=test@triagebiosa.dev
TEST_USER_PASSWORD=testpassword123
MOCK_EXTERNAL_APIS=true

# ================================
# Logging Configuration
# ================================
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5

# ================================
# Cache Configuration
# ================================
ENABLE_HTTP_CACHE=true
HTTP_CACHE_MAX_AGE=300
ENABLE_IMAGE_CACHE=true
IMAGE_CACHE_MAX_SIZE=100MB

# ================================
# Offline Support
# ================================
ENABLE_OFFLINE_MODE=true
OFFLINE_CACHE_STRATEGY=cache_first
SYNC_ON_RECONNECT=true
OFFLINE_QUEUE_MAX_SIZE=1000

# ================================
# Notification Configuration
# ================================
ENABLE_PUSH_NOTIFICATIONS=false
FCM_VAPID_KEY=your_vapid_key_here
NOTIFICATION_SOUND_ENABLED=true

# ================================
# Geolocation Configuration
# ================================
ENABLE_GEOLOCATION=true
GEOLOCATION_ACCURACY=high
GEOLOCATION_TIMEOUT=10000
DEFAULT_SEARCH_RADIUS_KM=50

# ================================
# Data Validation
# ================================
ENABLE_STRICT_VALIDATION=false
VALIDATE_VITALS_RANGES=true
REQUIRE_CONSENT_FOR_DATA_SHARING=true

# ================================
# Feature Flags
# ================================
FEATURE_HOSPITAL_ROUTING=true
FEATURE_WEARABLE_INTEGRATION=false
FEATURE_BLOCKCHAIN_CONSENT=false
FEATURE_MULTI_LANGUAGE=false
FEATURE_DARK_MODE=true

# ================================
# Development Utilities
# ================================
AUTO_SEED_DATA=true
RESET_DATA_ON_START=false
ENABLE_DATA_EXPORT=true
ENABLE_MOCK_HOSPITAL_APIS=true