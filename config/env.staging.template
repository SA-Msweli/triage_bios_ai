# Staging Environment Configuration Template
# Copy this file to .env.staging and update the values

# ================================
# Firebase Configuration
# ================================
FIREBASE_PROJECT_ID=triage-bios-staging
FIREBASE_API_KEY=your_staging_api_key_here
FIREBASE_AUTH_DOMAIN=triage-bios-staging.firebaseapp.com
FIREBASE_DATABASE_URL=https://triage-bios-staging-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=triage-bios-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:staging123456789012345678
FIREBASE_MEASUREMENT_ID=G-STAGING123

# ================================
# Application Configuration
# ================================
APP_NAME=Triage-BIOS.ai Staging
APP_VERSION=1.0.0-staging
APP_ENVIRONMENT=staging
DEBUG_MODE=false
LOG_LEVEL=info

# ================================
# Hospital Integration
# ================================
HOSPITAL_INTEGRATION_ENABLED=true
USE_MOCK_DATA=false
MOCK_DATA_SEED_ON_START=false

# Hospital API Configuration
HOSPITAL_API_TIMEOUT=20000
HOSPITAL_RETRY_ATTEMPTS=3
HOSPITAL_FALLBACK_ENABLED=true

# Test Hospital APIs
TEST_HOSPITAL_API_URL=https://api-staging.testhospital.com
TEST_HOSPITAL_API_KEY=staging_api_key_here
TEST_HOSPITAL_CLIENT_ID=staging_client_id
TEST_HOSPITAL_CLIENT_SECRET=staging_client_secret

# ================================
# Firestore Configuration
# ================================
ENABLE_FIRESTORE_EMULATOR=false
FIRESTORE_OFFLINE_PERSISTENCE=true
FIRESTORE_CACHE_SIZE_MB=50

# ================================
# Authentication Configuration
# ================================
AUTH_EMULATOR_ENABLED=false
ENABLE_ANONYMOUS_AUTH=true
REQUIRE_EMAIL_VERIFICATION=true

# ================================
# Real-time Features
# ================================
ENABLE_REAL_TIME_UPDATES=true
WEBSOCKET_RECONNECT_ATTEMPTS=5
WEBSOCKET_RECONNECT_DELAY=2000
MAX_CONCURRENT_LISTENERS=20

# ================================
# AI/ML Configuration
# ================================
GEMINI_API_KEY=your_staging_gemini_api_key_here
GEMINI_MODEL_VERSION=gemini-pro
AI_CONFIDENCE_THRESHOLD=0.75
ENABLE_AI_DEBUGGING=false

# ================================
# Device Integration
# ================================
ENABLE_APPLE_HEALTH=true
ENABLE_GOOGLE_FIT=true
ENABLE_MANUAL_VITALS=true
VITALS_VALIDATION_STRICT=true

# ================================
# Security Configuration
# ================================
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=https://staging.triagebiosa.com
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=500

# ================================
# Monitoring and Analytics
# ================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CRASH_REPORTING=true
ENABLE_ANALYTICS=true
ANALYTICS_DEBUG_MODE=false

# ================================
# Development Tools
# ================================
ENABLE_REDUX_DEVTOOLS=false
ENABLE_FLUTTER_INSPECTOR=false
HOT_RELOAD_ENABLED=false
SHOW_DEBUG_BANNER=false

# ================================
# Testing Configuration
# ================================
ENABLE_TEST_MODE=true
TEST_USER_EMAIL=staging-test@triagebiosa.com
TEST_USER_PASSWORD=staging_test_password_here
MOCK_EXTERNAL_APIS=false

# ================================
# Logging Configuration
# ================================
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/staging.log
LOG_MAX_FILE_SIZE=50MB
LOG_MAX_FILES=10

# ================================
# Cache Configuration
# ================================
ENABLE_HTTP_CACHE=true
HTTP_CACHE_MAX_AGE=600
ENABLE_IMAGE_CACHE=true
IMAGE_CACHE_MAX_SIZE=200MB

# ================================
# Offline Support
# ================================
ENABLE_OFFLINE_MODE=true
OFFLINE_CACHE_STRATEGY=network_first
SYNC_ON_RECONNECT=true
OFFLINE_QUEUE_MAX_SIZE=2000

# ================================
# Notification Configuration
# ================================
ENABLE_PUSH_NOTIFICATIONS=true
FCM_VAPID_KEY=your_staging_vapid_key_here
NOTIFICATION_SOUND_ENABLED=true

# ================================
# Geolocation Configuration
# ================================
ENABLE_GEOLOCATION=true
GEOLOCATION_ACCURACY=high
GEOLOCATION_TIMEOUT=15000
DEFAULT_SEARCH_RADIUS_KM=100

# ================================
# Data Validation
# ================================
ENABLE_STRICT_VALIDATION=true
VALIDATE_VITALS_RANGES=true
REQUIRE_CONSENT_FOR_DATA_SHARING=true

# ================================
# Feature Flags
# ================================
FEATURE_HOSPITAL_ROUTING=true
FEATURE_WEARABLE_INTEGRATION=true
FEATURE_BLOCKCHAIN_CONSENT=false
FEATURE_MULTI_LANGUAGE=true
FEATURE_DARK_MODE=true

# ================================
# Hospital Integration Examples
# ================================
# Metro General Hospital (Example)
METRO_GENERAL_API_URL=https://api-staging.metrogeneral.com/v1
METRO_GENERAL_CLIENT_ID=staging_metro_client_id
METRO_GENERAL_CLIENT_SECRET=staging_metro_client_secret
METRO_GENERAL_SYNC_INTERVAL=5

# City Medical Center (Example)
CITY_MEDICAL_API_URL=https://staging-api.citymedical.org/v2
CITY_MEDICAL_API_KEY=staging_city_medical_api_key
CITY_MEDICAL_SYNC_INTERVAL=10

# ================================
# Performance Monitoring
# ================================
PERFORMANCE_SAMPLE_RATE=0.1
ERROR_SAMPLE_RATE=1.0
ENABLE_CUSTOM_METRICS=true

# ================================
# Backup and Recovery
# ================================
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_BUCKET=triage-bios-staging-backups

# ================================
# Load Testing
# ================================
ENABLE_LOAD_TESTING=true
MAX_CONCURRENT_USERS=100
LOAD_TEST_DURATION_MINUTES=30